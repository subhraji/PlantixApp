<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border_bg1"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/about_canada_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
    <View
        android:id="@+id/about_canada_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C6C6"
        android:layout_below="@+id/about_canada_img"/>
    <TextView
        android:id="@+id/about_canada_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_canada_view1"
        android:textColor="@color/black"
        android:textSize="16dp" />
</RelativeLayout>